<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A6B76"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Status Layout (Device Status & Door Status in One Line) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <!-- Device Status Label -->
        <TextView
            android:id="@+id/txtDeviceStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Device Status: "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Device Status Value -->
        <TextView
            android:id="@+id/DeviceStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="None"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Door Status Label -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Door Status: "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Door Status Value -->
        <TextView
            android:id="@+id/textAck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="None"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Lock Button -->
    <ImageButton
        android:id="@+id/buttonSend"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_press_release"
        app:srcCompat="@drawable/locked"/>

    <!-- Unlock Button -->
    <ImageButton
        android:id="@+id/btnUnlock"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_press_release"
        app:srcCompat="@drawable/unlocked"/>

</LinearLayout>
